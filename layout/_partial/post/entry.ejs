<div class="entry">
	<ul class="thumbnails">
    <% if (item.feature ) { %>   	  
   	  <li class="span8">
	<% } %>
	
    <% if (item.excerpt && index){ %>
      <%- item.excerpt %>	  
   <% } else { %>
   	  <%= truncate(strip_html(item.content), 500) %>
   <% } %>   
   <% if (item.feature ) { %>
      </li>
      <li class="span4">
      <div class="thumbnail"><a href="<%- config.root %><%= item.path %>"><img src="<%= item.feature %>" alt="<%= item.title %>"  class="nofancybox"></a></div>
	  </li>
   <% } %>
   </ul>
   <a href="<%- config.root %><%- item.path %>#more" class="btn more"><%= __('read_more') %></a>
</div>    
