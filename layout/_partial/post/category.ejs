<% if (item.categories && item.categories.length){ %>
  <li><i class="fa fa-folder"></i></li>
  <%
  var cats = [];
  item.categories.forEach(function(cat){
    cats.push('<li><a href="' + config.root + cat.path + '">' + cat.name + '<span>' + cat.length  + '</span></a></li>');
  });
  %>
  <li>
    <%- cats.join(' ') %>
  </li>
<% } %>