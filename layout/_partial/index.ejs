<div class="row page">

	<% if (theme.widgets.length) { %>
	<div class="col-md-9">
	<% } else { %>
	<div class="col-md-12">
	<% } %>

		<%- partial('post/slogan') %>
        
		<!-- title and entry -->
		<% page.posts.each(function(item){ %>
			<%- partial('post/title', {item: item, index: index}) %>
			<%- partial('post/entry', {item: item, index: index}) %>
		<% }); %>

		<hr>
		
		<div>
  		<center>
		<%- partial('index_pagination') %>
    	
  		</center>
		</div>
		<!-- pagination -->
		
		
	</div> <!-- col-md-9 -->

	<% if (theme.widgets.length) { %>
		<%- partial('sidebar') %>
	<% } %>
	
</div> <!-- row-fluid -->